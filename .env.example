# ──────────────────────────────────────────────
# Growth OS — Environment Variables
# Copy to .env and fill in real values
# ──────────────────────────────────────────────

# ── Mode ──
# Set to "true" to use mock connectors (no real credentials needed)
DEMO_MODE=true

# ── Database ──
DATABASE_URL=postgresql://growthuser:growthpass@localhost:5432/growth_os
POSTGRES_USER=growthuser
POSTGRES_PASSWORD=growthpass
POSTGRES_DB=growth_os

# ── Redis ──
REDIS_URL=redis://localhost:6379

# ── Encryption (for storing OAuth tokens at rest) ──
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your-64-char-hex-key-here

# ── API Server ──
API_PORT=4000
API_HOST=0.0.0.0

# ── Frontend ──
NEXT_PUBLIC_API_URL=http://localhost:4000

# ── Auth (simple local auth) ──
# ⚠️  CHANGE ALL VALUES BELOW before deploying!
AUTH_SECRET=CHANGE_ME_generate_with_openssl_rand_hex_32
AUTH_USERNAME=admin
AUTH_PASSWORD=CHANGE_ME_use_a_strong_password

# ── Shopify ──
SHOPIFY_SHOP_DOMAIN=your-store.myshopify.com
SHOPIFY_ACCESS_TOKEN=shpat_xxxxxxxxxxxx

# ── Google OAuth (covers Google Ads + GA4) ──
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:4000/auth/google/callback
GOOGLE_ADS_CUSTOMER_ID=
GOOGLE_ADS_DEVELOPER_TOKEN=
GA4_PROPERTY_ID=

# ── Meta (Facebook Ads) ──
META_ACCESS_TOKEN=
META_AD_ACCOUNT_ID=act_xxxxxxxxxx

# ── Scheduler ──
# Cron expressions for scheduled syncs
SYNC_CRON_HOURLY="0 * * * *"
SYNC_CRON_DAILY="0 6 * * *"
BACKFILL_DAYS=90

# ── Demo Seed ──
DEMO_SEED=42
DEMO_DAYS=180
